{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "target": "es2017",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "es2017",
      "es2015",
      "es6"
    ],
  },
  "exclude": [ "node_modules", "dist"]
}
